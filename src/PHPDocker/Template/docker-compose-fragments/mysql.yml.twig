{% if project.hasMysql() %}
    mysql:
      image: mysql:{{ mysql.getVersion() }}
      working_dir: {{ dir.getDockerWorkingDir() }}
      volumes:
        - {{ dir.getLocalWorkingDir() }}:{{ dir.getDockerWorkingDir() }}
      environment:
        - MYSQL_ROOT_PASSWORD={{ mysql.getRootPassword() }}
        - MYSQL_DATABASE={{ mysql.getDatabaseName() }}
        - MYSQL_USER={{ mysql.getUsername() }}
        - MYSQL_PASSWORD={{ mysql.getPassword() }}
      ports:
        - "{{ project.getBasePort() + 2 }}:3306"
{% endif %}
