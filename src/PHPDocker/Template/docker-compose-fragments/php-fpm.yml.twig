{% apply spaceless %}
    {% if phpVersion == '7.2.x' %}
        {% set iniLocation = '/etc/php/7.2/fpm/conf.d/' %}
    {% elseif phpVersion == '7.3.x' %}
        {% set iniLocation = '/etc/php/7.3/fpm/conf.d/' %}
    {% elseif phpVersion == '7.4.x' %}
        {% set iniLocation = '/etc/php/7.4/fpm/conf.d/' %}
    {% else %}
        {% set iniLocation = '/etc/php/8.0/fpm/conf.d/' %}
    {% endif %}
{% endapply %}
    php-fpm:
      build: phpdocker/php-fpm
      working_dir: /application
      volumes:
        - .:/application
        - ./phpdocker/{{ phpIniOverrides }}:{{ iniLocation }}99-overrides.ini
