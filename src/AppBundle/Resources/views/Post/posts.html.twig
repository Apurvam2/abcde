{% for post in posts %}
    <dl class="post posts">
        <dt>{{ post.getTitle() }}</dt>
        <dd class="date">{{ post.getCreatedAt()|date("F jS, Y") }}</dd>
        <dd class="body">
            {{ post.getBodyIntro()|raw }}
            {{ post.getBody()|raw }}
        </dd>
    </dl>
{% endfor %}
